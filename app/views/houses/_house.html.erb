<div id="<%= dom_id house %>">
  <p class="my-5">
    <strong class="block mb-1 font-medium">Name:</strong>
    <%= house.title %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this house", house, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this house', edit_house_path(house), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>

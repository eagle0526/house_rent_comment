<% if house.errors.any? %>
  <ul>
    <% house.errors.full_messages.each do |message| %>
      <li class="inline-flex items-center px-6 py-2 my-4 mr-4 text-white bg-red-500 rounded">        
        <%= message.gsub(/^Title /, "").gsub(/^Images /, "圖片") %>
      </li> 
    <% end %>
  </ul>  
<% end %> 

 
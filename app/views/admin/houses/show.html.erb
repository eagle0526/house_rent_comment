<h2>使用者新增的房屋</h2>

<br>
<%= link_to "編輯", edit_admin_house_path(@house.id), class: "second-btn" %>
<br>
<section>
  <div>
    <h3 class="mb-4 text-center">你新增的所有房屋</h3>
  </div>

  <table class="w-full text-base text-left text-gray-500 dark:text-gray-400">
      <thead class="text-base text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
          <th class="px-6 py-3">id</th>
          <th class="px-6 py-3">房屋名稱</th>
          <th class="px-6 py-3">房屋描述</th>
          <th class="px-6 py-3">圖片</th>
      </tr>
      </thead>
      
      <tbody>
      
      <tr>          
          <td class="px-6 py-4"><%= @house.id %></td>
          <td class="px-6 py-4"><%= @house.title %></td>
          <td class="px-6 py-4"><%= @house.description %></td>
          <% if @house.images.blank? %>
            <td class="px-6 py-4">
              <p>沒圖片</p>
            </td>
          <% else %>
            <td class="px-6 py-4">            
              <div class="grid grid-cols-4 gap-2" data-controller="house-image">
                <% @house.images.each do |image| %>
                  <div class="relative">
                    <%= link_to destroy_image_admin_house_path(@house, image), data: {turbo_method: "delete", confirm: "確定刪除?"} do %>
                      <div class= 'absolute top-0 right-0 flex items-center justify-center w-5 h-5 mt-2 mr-2 text-white bg-red-600 rounded-full '>
                        <i class= "text-xs fa-solid fa-x"></i>                                
                      </div>              
                    <% end %>
                    <%= image_tag image.variant(:normal) %>
                  </div>
                <% end %>        
              </div>              
            </td>

          <% end %>

      </tr>
      
      </tbody>
      
  </table>

  <div>
    <%= link_to "上一頁", admin_user_houses_path(current_user), class: "second-btn" %>
    
  
  </div>


</section>





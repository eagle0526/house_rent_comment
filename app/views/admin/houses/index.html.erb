<section class="flex justify-center w-3/4 mx-auto mt-36" >
  <div class="flex items-center justify-center w-full p-12 bg-white rounded">
    <i class="mr-5 text-2xl fa-solid fa-house-chimney-window"></i>
    <p class="text-xl">發佈過的房屋資訊</p>
  </div>
</section>

<section class="flex justify-center w-3/4 mx-auto mt-5">
  <%# 左邊區塊 %>
  <div class="w-2/3">    
    
    <%# 上方區塊 %>
    <div class="flex items-center p-5 bg-white rounded">

      <%= link_to admin_user_houses_path(current_user) do %>
      <div class="flex items-center justify-center px-6 py-2 mr-4 text-blue-700 rounded-full cursor-pointer bg-slate-100">
        <p class="mr-3">發佈時間</p>        
        <i class="fa-solid fa-upload"></i>
      </div>
      <% end %>

      <%= link_to admin_user_houses_path(current_user, query: "留言數") do %>
      <div class="flex items-center justify-center px-6 py-2 mr-4 text-blue-700 rounded-full cursor-pointer hover:bg-slate-100">
        <p class="mr-3">留言數</p>        
        <i class="fa-solid fa-comment"></i>
      </div>
      <% end %>
      
      <%= link_to admin_user_houses_path(current_user, query: "喜歡數") do %>
      <div class="flex items-center justify-center px-6 py-2 mr-4 text-blue-700 rounded-full cursor-pointer hover:bg-slate-100">
        <p class="mr-3">喜歡數</p>                
        <i class="fa-solid fa-thumbs-up"></i>
      </div>
      <% end %>
      
      <%= link_to admin_user_houses_path(current_user, query: "瀏覽數") do %>
      <div class="flex items-center justify-center px-6 py-2 mr-4 text-blue-700 rounded-full cursor-pointer hover:bg-slate-100">
        <p class="mr-3">瀏覽數</p>
        <i class="fa-solid fa-eye"></i>
      </div>
      <% end %>
    </div>

    <%# 下方區塊 %>
    <div class="mt-5 rounded">  
      
      <%# 這段是渲染users/show.html.erb頁面  %>
      <% @houses.each do |house| %>   
        <%= render "house", house: house %>
      <% end %>

      <%# 但是rails說，如果在回圈裡面用render partail，會造成效率問題，要用collection寫法，因此改成這樣寫 %>
      <%#= render partial: "house", collection: @houses, as: :house %>

      <%# 上面那一整串推可以縮寫改成這樣 %>
      <%#= render @houses %>

      <%# !不過現在遇到另外一個問題，就是換成collection後效能好像沒變好，而且還跑出 [2 times] 這個東西! %>
      
    </div>


  </div>

  <%# 右邊區塊 %>
  <div class="w-1/3 ml-4 rounded">
    <%= render "admin/users/info" %>          
  </div>

</section>
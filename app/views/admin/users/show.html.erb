<section class="flex justify-center w-3/4 mx-auto mt-36" >
  <div class="flex items-center justify-center w-full p-12 bg-white rounded">
    <i class="mr-5 text-2xl fa-solid fa-person-dress"></i>
    <p class="text-xl">使用者瀏覽資訊</p>
  </div>
</section>

<section class="flex justify-center w-3/4 mx-auto mt-5">

  <%# 左邊區塊 %>
  <div class="w-2/3">    
    
    <%# 上方區塊 %>
    <div class="flex items-center p-5 bg-white rounded">

      <%= link_to admin_user_path(current_user) do %>
      <div class="<%= @message == nil ? 'text-blue-700 bg-slate-100 user-house-filter hover:bg-slate-100' : 'user-house-filter bg-white' %>">
        <p class="mr-3">已發佈</p>        
        <i class="fa-solid fa-upload"></i>
      </div>
      <% end %>

      <%= link_to admin_user_path(current_user, query: "已留言") do %>
      <div class="<%= @message == '已留言' ? 'text-blue-700 bg-slate-100 user-house-filter hover:bg-slate-100' : 'user-house-filter bg-white' %>">
        <p class="mr-3">已留言</p>        
        <i class="fa-solid fa-comment"></i>
      </div>
      <% end %>
      
      <%= link_to admin_user_path(current_user, query: "已點讚") do %>
      <div class="<%= @message == '已點讚' ? 'text-blue-700 bg-slate-100 user-house-filter hover:bg-slate-100' : 'user-house-filter bg-white' %>">
        <p class="mr-3">已點讚</p>                
        <i class="fa-solid fa-thumbs-up"></i>
      </div>
      <% end %>
      
      <%= link_to admin_user_path(current_user, query: "已瀏覽") do %>
      <div class="<%= @message == '已瀏覽' ? 'text-blue-700 bg-slate-100 user-house-filter hover:bg-slate-100' : 'user-house-filter bg-white' %>">
        <p class="mr-3">已瀏覽</p>
        <i class="fa-solid fa-eye"></i>
      </div>
      <% end %>
    </div>

    <%# 下方區塊 %>
    <div class="mt-5 rounded">  

      <%# 這段是渲染users/show.html.erb頁面  %>
      <% @houses.each do |house| %>   
        <%= render "house", house: house %>
      <% end %>

      <%# 但是rails說，如果在回圈裡面用render partail，會造成效率問題，要用collection寫法，因此改成這樣寫 %>
      <%#= render partial: "house", collection: @houses, as: :house %>

      <%# 上面那一整串推可以縮寫改成這樣 %>
      <%#= render @houses %>

      <%# !不過現在遇到另外一個問題，就是換成collection後效能好像沒變好，而且還跑出 [2 times] 這個東西! %>
      
    </div>


  </div>

  <%# 右邊區塊 %>
  <div class="w-1/3 ml-4 rounded">
    <%= render "info" %>
  </div>

</section>
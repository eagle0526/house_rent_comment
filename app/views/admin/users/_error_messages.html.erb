<div class="">        
  <% if user.errors.any? %>
    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li class="inline-flex items-center px-6 py-2 mx-2 my-4 text-white bg-red-500 rounded">
          <%= message.gsub(/^Avatar /, "大頭貼") %>
        </li> 
      <% end %>
    </ul>  
  <% end %> 
</div>